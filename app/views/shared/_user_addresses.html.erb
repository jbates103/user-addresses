<% if @addresses.empty? %>
	<h2>User has no addresses</h2>
<% else %>
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<th colspan="1u">Street 1</th>
			<th colspan="1">Street 2</th>
			<th colspan="1">City</th>
			<th colspan="1">State</th>
			<th colspan="1">Zip Code</th>
			<th colspan="1">Address Type</th>
			<th colspan="1">Current</th>
			<th colspan="1">Edit User</th>
		</tr>
		<% @addresses.each do |address| %>
			<tr>
				<td><%= address.street_1 %></td>
				<td><%= address.street_2 %></td>
				<td><%= address.city %></td>
				<td><%= address.state %></td>
				<td><%= address.zip_code %></td>
				<td><%= address.type_address %></td>
				<% if address.current == 1 %>
					<td>Current Address</td>
				<% else %>
					<td>Not Current</td>
				<% end %>
				<td><%= link_to "Edit", edit_user_address_path(@user, address) %></td>

			</tr>
		<% end %>
	</table>
<% end %>