<%= form_for([@user , @address])  do |f_address| %>
	<% if @address.errors.any? %>
		<div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  	<% end %>
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<td><%= f_address.label :street_1 %>:</td>
			<td><%= f_address.text_field :street_1 %></td>
		<tr>
		<tr>
			<td><%= f_address.label :street_2 %>:</td>
			<td><%= f_address.text_field :street_2 %></td>
		<tr>
		<tr>
			<td><%= f_address.label :city %>:</td>
			<td><%= f_address.text_field :city %></td>
		<tr>
		<tr>
			<td><%= f_address.label :state %>:</td>
			<td><%= f_address.text_field :state %></td>
		<tr>
		<tr>
			<td><%= f_address.label :zip_code %>:</td>
			<td><%= f_address.text_field :zip_code %></td>
		<tr>
		<tr>
			<td><%= f_address.label :address_type %></td>
			<td><%= f_address.select(:type_address, options_for_select([['home','home'],['work','work']])) %></td>
		</tr>
		<tr>
			<td><%= f_address.label :current %></td>
			<td><%= f_address.check_box :current, :checked_value => 1, :unchecked_value => 0 %></td>
		</tr>
	</table>
	<br>
	<%= f_address.submit class: "btn btn-primary" %>
<% end %>
